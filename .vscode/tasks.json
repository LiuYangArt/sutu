{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev",
      "type": "shell",
      "command": "pnpm tauri dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "pnpm build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Check All",
      "type": "shell",
      "command": "pnpm check:all",
      "group": "test",
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "label": "Test Frontend",
      "type": "shell",
      "command": "pnpm test",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Test Rust",
      "type": "shell",
      "command": "cargo test --manifest-path src-tauri/Cargo.toml",
      "group": "test",
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "pnpm lint && cargo clippy --manifest-path src-tauri/Cargo.toml",
      "problemMatcher": ["$eslint-stylish", "$rustc"]
    },
    {
      "label": "Format",
      "type": "shell",
      "command": "pnpm format",
      "problemMatcher": []
    }
  ]
}
